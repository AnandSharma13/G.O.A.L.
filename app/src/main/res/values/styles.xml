<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/gray</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
    </style>

    <style name="home_fragment_buttons_theme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="text_view_size">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="activityEntryCalendarTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/activity_entry_app_bar</item>
        <item name="android:headerBackground">@color/activity_entry_app_bar</item>

        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/activity_entry_font_color</item>
        <item name="android:colorBackground">@color/activity_entry_font_color</item>
    </style>

    <style name="nutritionEntryCalendarTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/nutrition_entry_app_bar</item>
        <item name="android:headerBackground">@color/nutrition_entry_app_bar</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/nutrition_entry_app_bar</item>
        <item name="android:colorBackground">@color/nutrition_entry_app_bar</item>
    </style>
</resources>
