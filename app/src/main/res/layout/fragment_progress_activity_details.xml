<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/progress_background"
              android:orientation="vertical"
              android:weightSum="1"
              tools:context="com.ph.fragments.ProgressActivityDetails">

    <RelativeLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight=".5">
        <com.ph.view.CustomProgressBar
            android:id="@+id/progress_bar_nutrition_details"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/home_activity_progress_bar_background"
            android:clickable="true"
            android:max="100"
            android:layout_centerInParent="true"
            android:progress="0"
            android:progressDrawable="@drawable/circular"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight=".5">
        <TextView android:id="@+id/progress_activity_info"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:text="Default" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>
