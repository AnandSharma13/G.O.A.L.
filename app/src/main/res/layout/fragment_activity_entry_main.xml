<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/backgroundColor"
    tools:context=".fragments.ActivityEntryMainFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.23"
        android:id="@+id/activity_entry_date_layout"
        android:background="@color/gray">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Date"
            android:id="@+id/activity_entry_date"
            android:layout_margin="80px"
            />

        <EditText
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/activity_entry_date_text_view"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50px"
            android:focusable="false"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragement_activity_entry_main_linear_layout_cardio"
        android:background="@color/white"
        android:onClick="activityClick">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Cardio"
            android:id="@+id/textView"
            android:layout_margin="80px" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/fragement_activity_entry_main_linear_layout_strength"
        android:background="@color/gray"
        android:onClick="activityClick">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Strength"
            android:id="@+id/textView2"
            android:layout_margin="80px" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/fragement_activity_entry_main_linear_layout_lifestyle"
        android:background="@color/colorAccent"
        android:onClick="activityClick">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Lifestyle"
            android:id="@+id/textView4"
            android:layout_margin="80px" />
    </LinearLayout>
</LinearLayout>