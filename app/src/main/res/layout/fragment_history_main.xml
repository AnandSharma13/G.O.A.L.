<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ph.Fragments.HistoryMainFragment"
    android:clickable="true"
    android:background="@color/backgroundColor">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.ph.Activities.HistoryActivity">
        <android.support.design.widget.TabLayout
            android:id="@+id/activity_history_tabs"
            android:layout_below="@id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            app:tabGravity="fill"
            android:background="@color/blue"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/activity_history_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/activity_history_tabs">


        </android.support.v4.view.ViewPager>


    </RelativeLayout>


</FrameLayout>
